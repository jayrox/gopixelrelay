<div id="content">
	{{if .Data.AlbumUser.Name}}<h1 id="albumowner">{{.Data.AlbumUser.Name}}</h1>{{end}}
	<ul>
{{range .Data.AlbumsList}}
		<li>
			<div>
				<h4>{{.Name}}</h4>
				<a href="/album/{{.Name}}"><img src="/t/{{.Poster}}" /></a>
				<span>{{if .Private}}<a href="/manage/album/{{.Name}}/private/false" class="sprite lock" title="Private">&nbsp;</a>{{else}}<a href="/manage/album/{{.Name}}/private/true" class="sprite unlock" title="Not Private">&nbsp;</a>{{end}}</span>
			</div>
		</li>
{{ end }}
	</ul>
</div>